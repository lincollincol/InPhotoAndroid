<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InPhoto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextButton">
        <item name="android:paddingTop">@dimen/padding_all_general</item>
        <item name="android:paddingBottom">@dimen/padding_all_general</item>
        <item name="android:paddingStart">@dimen/padding_all_general_large</item>
        <item name="android:paddingEnd">@dimen/padding_all_general_large</item>
        <item name="android:textSize">@dimen/font_all_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FilledTextButton" parent="TextButton">
        <item name="android:background">@drawable/shape_round_50</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="OutlinedTextButton" parent="TextButton">
        <item name="android:background">@drawable/stroke_black_round_50</item>

    </style>

</resources>