<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InPhoto" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corner_large</item>
<!--        <item name="cornerRadius">@dimen/corner_small</item>-->
        <item name="textAllCaps">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent
        </item>
        <item name="elevation">@dimen/elevation_general</item>
        <item name="android:paddingTop">@dimen/padding_general</item>
        <item name="android:paddingBottom">@dimen/padding_general</item>
    </style>

    <style name="SmallMaterialButton" parent="MaterialButton">
        <item name="cornerRadius">@dimen/corner_general</item>
        <item name="textAllCaps">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent
        </item>
        <item name="elevation">@dimen/elevation_small</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="OutlinedMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/corner_large</item>
        <!--        <item name="cornerRadius">@dimen/corner_small</item>-->

        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/black</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent
        </item>
        <item name="elevation">@dimen/elevation_general</item>
        <item name="android:paddingTop">@dimen/padding_general</item>
        <item name="android:paddingBottom">@dimen/padding_general</item>
    </style>

    <style name="TextMaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/corner_large</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/padding_general</item>
        <item name="android:paddingBottom">@dimen/padding_general</item>
        <item name="android:textColor">@drawable/background_text_button</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="TextInputField">
        <item name="android:padding">@dimen/padding_general</item>
        <item name="android:fontFamily">@font/noto_serif_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="TextField">
        <item name="android:fontFamily">@font/noto_serif_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextFieldBold" parent="TextField">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextFieldItalic" parent="TextField">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SwitchIos" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/noto_serif_regular</item>
        <item name="android:thumb">@drawable/selector_switch_thumb</item>
        <item name="track">@drawable/selector_switch_track</item>
    </style>

    <style name="CircleImageShape50" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CircleImageShape25" parent="">
        <item name="cornerSize">10%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CircleImageButton">
        <item name="android:background">@drawable/background_circle_image_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation">5dp</item>
    </style>

</resources>
