<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InPhoto" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="TextButton">
        <item name="android:paddingTop">@dimen/padding_all_general</item>
        <item name="android:paddingBottom">@dimen/padding_all_general</item>
        <item name="android:paddingStart">@dimen/padding_all_general_large</item>
        <item name="android:paddingEnd">@dimen/padding_all_general_large</item>
        <item name="android:textColor">@drawable/background_text_button</item>
        <item name="android:textSize">@dimen/font_all_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="FilledTextButton" parent="TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_filled_button</item>
    </style>

    <style name="OutlinedTextButton" parent="TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_outlined_button</item>
    </style>

    <style name="TextInputField">
        <item name="android:padding">@dimen/padding_all_general</item>
        <item name="android:fontFamily">@font/noto_serif_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:textSize">@dimen/font_all_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="TextField">
        <item name="android:fontFamily">@font/noto_serif_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextFieldBold" parent="TextField">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextFieldItalic" parent="TextField">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CircleImageShape" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
<!--        <item name="cornerSize">50dp</item>-->
    </style>

</resources>
