<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layoutDescription="@xml/profile_toolbar_descriptor"
    app:applyMotionScene="true"
    app:motionProgress="0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_all_general_small"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_all_general_small"/>

    <ImageView
        android:id="@+id/back_button"
        style="@style/CircleImageButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="@dimen/margin_all_general"
        android:src="@drawable/ic_back_arrow"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/header_image"/>

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header"
        app:layout_constraintDimensionRatio="H,2:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_avatar_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="5dp"
        app:srcCompat="@drawable/avatar"
        app:shapeAppearanceOverlay="@style/CircleImageShape50"
        app:layout_constraintTop_toBottomOf="@id/header_image"
        app:layout_constraintBottom_toBottomOf="@id/header_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/profile_name_text_field"
        style="@style/TextFieldBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_all_general"
        android:textSize="@dimen/font_all_normal"
        tools:text="Linc"
        app:layout_constraintTop_toBottomOf="@id/profile_avatar_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_content_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rotationX="-0"
        app:layout_constraintTop_toBottomOf="@id/header_image"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constraintEnd_toEndOf="@id/end_line">

        <TextView
            android:id="@+id/followers_count_text_field"
            style="@style/TextFieldBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_all_general_small"
            android:textSize="@dimen/font_all_normal"
            android:text="100k"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/profile_audience_internal_space"/>

        <TextView
            android:id="@+id/followers_label"
            style="@style/TextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_all_small"
            android:textColor="@color/black_50"
            android:text="Followers"
            app:layout_constraintTop_toBottomOf="@id/followers_count_text_field"
            app:layout_constraintStart_toStartOf="@id/followers_count_text_field"
            app:layout_constraintEnd_toEndOf="@id/followers_count_text_field"/>

        <Space
            android:id="@+id/profile_audience_internal_space"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/following_count_text_field"
            style="@style/TextFieldBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_all_general_small"
            android:textSize="@dimen/font_all_normal"
            android:text="115"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_audience_internal_space"/>

        <TextView
            android:id="@+id/following_label"
            style="@style/TextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_all_small"
            android:textColor="@color/black_50"
            android:text="Following"
            app:layout_constraintTop_toBottomOf="@id/following_count_text_field"
            app:layout_constraintStart_toStartOf="@id/following_count_text_field"
            app:layout_constraintEnd_toEndOf="@id/following_count_text_field"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/audience_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="followers_label, following_label"/>

        <Space
            android:id="@+id/profile_name_internal_space"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/audience_barrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/profile_status_text_field"
            style="@style/TextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_all_small"
            android:textColor="@color/black_50"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@string/mock_status"
            app:layout_constraintTop_toBottomOf="@id/profile_name_internal_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/follow_button"
            style="@style/FilledTextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_all_general"
            android:layout_marginStart="@dimen/margin_all_general_large"
            android:layout_marginEnd="@dimen/margin_all_general"
            android:text="Follow"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/profile_status_text_field"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/message_button"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/message_button"
            style="@style/OutlinedTextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_all_general"
            android:layout_marginEnd="@dimen/margin_all_general_large"
            android:layout_marginStart="@dimen/margin_all_general"
            android:text="Message"
            app:layout_constraintTop_toBottomOf="@id/profile_status_text_field"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/follow_button"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_photos_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/profile_content_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>