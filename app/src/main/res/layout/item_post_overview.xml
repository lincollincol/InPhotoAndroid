<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_general">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userAvatarImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="@dimen/margin_general"
        android:background="@color/white"
        android:elevation="@dimen/elevation_small"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImageShape50"
        app:srcCompat="@drawable/mango" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/usernameTextView"
        style="@style/TextFieldBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_general"
        android:textSize="@dimen/font_small"
        app:layout_constraintBottom_toBottomOf="@id/userAvatarImageView"
        app:layout_constraintEnd_toStartOf="@id/moreImageView"
        app:layout_constraintStart_toEndOf="@id/userAvatarImageView"
        app:layout_constraintTop_toTopOf="@id/userAvatarImageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moreImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_general"
        app:layout_constraintBottom_toBottomOf="@id/userAvatarImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/userAvatarImageView"
        app:srcCompat="@drawable/ic_more_vertical"
        app:tint="@color/black" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/headerBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="
        userAvatarImageView,
        usernameTextView,
        moreImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/postImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_general"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/white"
        android:elevation="@dimen/elevation_small"
        android:scaleType="center"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBarrier"
        app:shapeAppearanceOverlay="@style/CircleImageShape25"
        app:srcCompat="@drawable/mango" />

    <com.linc.inphoto.ui.view.ImageTextView
        android:id="@+id/likeImageTextView"
        style="@style/TextFieldBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_general"
        android:layout_marginTop="@dimen/margin_small"
        app:icon="@drawable/selector_like"
        app:iconSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postImageView"
        app:textSize="@dimen/font_small" />

    <com.linc.inphoto.ui.view.ImageTextView
        android:id="@+id/commentImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_general"
        android:layout_marginTop="@dimen/margin_small"
        app:icon="@drawable/ic_comment_outlined"
        app:iconSize="32dp"
        app:layout_constraintStart_toEndOf="@id/likeImageTextView"
        app:layout_constraintTop_toBottomOf="@id/postImageView"
        app:textSize="@dimen/font_small" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bookmarkImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="@dimen/margin_general"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postImageView"
        app:srcCompat="@drawable/ic_bookmark_outlined"
        app:tint="@color/black" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/controllersBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="
        likeImageTextView,
        commentImageView,
        bookmarkImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descriptionTextView"
        style="@style/TextField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_general"
        android:layout_marginTop="@dimen/margin_small"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/font_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/controllersBarrier"
        tools:text="@string/example_lorem_ipsum" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/tagsChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_general"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
        app:singleLine="true" />

</androidx.constraintlayout.widget.ConstraintLayout>